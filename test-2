```typescript
import { test, expect } from '@playwright/test';

test.describe('Send Email Functionality', () => {
  test('should send an email with the correct information', async ({ page }) => {
    // Navigate to the application
    await page.goto('https://two-test.vcreative.net/');

    // Log in to the application
    await page.fill('input[name="username"]', 'testuser');
    await page.fill('input[name="password"]', 'password123');
    await page.click('button[type="submit"]');
    await page.waitForNavigation();

    // Navigate to the orders page
    await page.click('text=Orders');
    await page.waitForLoadState('networkidle');

    // Select the order to export
    await page.click('input[type="checkbox"][data-order-id="12345"]');

    // Click on the export option in the action bar
    await page.click('button:has-text("Export")');

    // Choose the information to share
    await page.check('input[name="includeDetails"]');
    await page.check('input[name="includePricing"]');

    // Choose the format and send email
    await page.selectOption('select[name="format"]', 'PDF');
    await page.fill('input[name="email"]', 'vendor@example.com');
    await page.click('button:has-text("Send Email")');

    // Verify the email was sent
    const notification = await page.locator('text=Email sent successfully');
    await expect(notification).toBeVisible();
  });
});
```